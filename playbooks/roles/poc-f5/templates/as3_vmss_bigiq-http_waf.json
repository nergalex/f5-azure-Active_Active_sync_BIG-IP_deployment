{
    "class": "AS3",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.12.0",
        "id": "id_{{ 'random' | to_uuid }}",
        "target": {
            "address": "{{ item.management }}"
        },
        "{{ extra_app.name }}.{{ extra_app.domain }}": {
            "class": "Tenant",
            "defaultRouteDomain": 0,
            "{{ extra_app.name }}.{{ extra_app.domain }}_http": {
                "class": "Application",
                "template": "http",
                "statsProfile": {
                    "class": "Analytics_Profile",
                    "collectedStatsInternalLogging": true,
                    "collectedStatsExternalLogging": true,
                    "capturedTrafficInternalLogging": false,
                    "capturedTrafficExternalLogging": false,
                    "collectPageLoadTime": true,
                    "collectMaxTpsAndThroughput": true,
                    "collectClientSideStatistics": true,
                    "collectGeo": true,
                    "collectIp": true,
                    "collectResponseCode": true,
                    "collectMethod": true,
                    "collectOsAndBrowser": true,
                    "collectUrl": true,
                    "collectUserAgent": true,
                    "collectUserSession": true
                },
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": {{ extra_app.vip_subnet_awaf }},
                    "virtualPort": {{ extra_app.vs_listener_port_http }},
                    "securityLogProfiles": [
					    { "bigip": "{{ extra_log_profile }}" }
					],
                    "allowVlans": {{ extra_vlans }},
                    "snat": "auto",
                    "profileAnalytics": {
                        "use": "statsProfile"
                    },
                    "profileHTTP": {
                        "use": "profile_http_{{ extra_app.name }}"
                    },
                    "policyWAF": {
                        "use": "waf_policy_{{ extra_app.name }}"
                    },
                    "pool": "pool_{{ extra_app.name }}_{{ extra_pool[0].name }}"
                },
                {% for pool in extra_pool %}
                "pool_{{ extra_app.name }}_{{ pool.name }}": {
                    "class": "Pool",
                    "loadBalancingMode" : "{{ pool.loadBalancingMode }}",
                    "monitors": [{
                        "use": "monitor_http_{{ extra_app.name }}"
                    }],
                    "members": [
                        {
                            "servicePort": {{ pool.servicePort }},
                            "serverAddresses": {{ pool.serverAddresses }},
                            "updateInterval": 10
                        }
                    ]
                },
                {% endfor %}

                "profile_http_{{ extra_app.name }}": {
                    "class": "HTTP_Profile",
                    "xForwardedFor": true,
                    "proxyType": "reverse",
                    "requestChunking": "rechunk",
                    "responseChunking": "rechunk"
                },
                "monitor_http_{{ extra_app.name }}": {
                  "class": "Monitor",
                  "monitorType": "http",
                  "send": "GET / HTTP/1.1\r\nHost: {{ extra_app.name }}.{{ extra_app.domain }}\r\nUser-Agent: {{ inventory_hostname }}/1.0.0 (health check)\r\n\r\n",
                  "receive": "200 OK",
                  "adaptive": false
                },
                "waf_policy_{{ extra_app.name }}" : {
                    "class": "WAF_Policy",
                    "url": "{{ extra_waf_policy }}",
                    "ignoreChanges": true
                }
            }
        }
    }
}
