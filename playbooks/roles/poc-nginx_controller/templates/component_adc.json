{
  "metadata": {
    "name": "default",
    "displayName": "default",
    "description": "Generated by CMP"
  },
  "desiredState": {
    "ingress": {
      "uris": {
        "{{ item.uri }}": {
          "matchMethod": "PREFIX"
        }
      },
      "gatewayRefs": [
        {
          "ref": "/services/environments/{{ var_env_prefix }}{{extra_app.environment | lower}}/gateways/gw_{{extra_app.name | lower}}"
        }
      ]
    },
    "backend": {
      "preserveHostHeader": "ENABLED",
      "workloadGroups": {
        "wlg_{{ item.name | lower }}": {
          "loadBalancingMethod": {
            "type": "LEAST_CONNECTIONS"
          },
          "sessionPersistence": {
            "type": "COOKIE"
          },
          "uris": {
            {%- for workload in item.workloads -%}
            "{{ workload }}": {
              "isBackup": false,
              "isDown": false,
              "isDrain": false
            }{%- if not loop.last -%},{% endif %}
            {%- endfor -%}
          }
        }
      },
      "monitoring": {
        "defaultState": "HEALTHY",
        "interval": 5,
        "consecutiveSuccessThreshold": 3,
        "consecutiveFailureThreshold": 3,
        "uri": "{{ extra_app.monitor_uri }}",
        "response": {
          "status": {
            "codes": [
              200
            ],
            "match": true
          }
        }
      }
    },
    "logging": {
      "errorLog": "ENABLED",
      "accessLog": {
        "state": "ENABLED"
      }
    },
    "configSnippets": {
      "uriSnippets": [
        {
          "directives": [
            {
              "directive": "brotli",
              "args": [
                "on"
              ]
            },
            {
              "directive": "brotli_comp_level",
              "args": [
                "6"
              ]
            },
            {
              "directive": "brotli_static",
              "args": [
                "on"
              ]
            },
            {
              "directive": "brotli_types",
              "args": [
                "text/css",
                "text/plain",
                "text/xml",
                "text/javascript"
              ]
            }
          ]
        }
      ]
    },
    "security": {
      "waf": {
        "isEnabled": true,
        "isMonitorOnly": false,
        "signatureOverrides": {}
      },
      "strategyRef": {
        "ref": "/security/strategies/balanced_default"
      }
    }
  }
}